    <script>
        const element = document.getElementById("pdf-area");
        function downloadPDF() {
            window.html2pdf().from(element).toPdf().get('pdf').then(function (pdf) {
              window.open(pdf.output('bloburl'), '_blank');
            });
        }
    </script>
