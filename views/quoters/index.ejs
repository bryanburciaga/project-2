<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/footer.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <title>Quoter</title>
</head>
<body>
        <%- include('../partials/nav.ejs') %>
<h1>Quoter</h1>
<p>Quote for:
    <input type="box" placeholder="name of the requester"></p> 
    <div class="box">
    <div class="containerOne" id="pdf-area">
        <div class="nav">
            <img src="https://i.imgur.com/QuS0A2q.jpg" alt=""  width="70" height="70">
            <p>Date:<%= new Date().getDate()  %>/<%= new Date().getMonth() %>/<%= new Date().getFullYear() %> </p>
            <p>Quote for: </p>
            <p>Quote from: Qu√≠mica Durango</p>
        </div>
        <table>
            <th>#</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Total</th>
            <% products.forEach((product, i) => { %>
                <tr>
                    <td> <%= i + 1 %> </td>
                    <td><a href="/quoter/<%= product._id %>">
                        <%= product.product %>
                    <td><%= product.qty %></td>
                    <td>$ <%= product.price %></td>
                    <td>$ <%= product.price * product.qty %></td>
                    <% }); %>  
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <th>Subotal: </th>
                        <td> $<%= total * .84 %> </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <th>Taxes: </th>
                        <td> $<%= taxes %></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <th> Total:</th>
                    <td> $<%= (total * .84) + taxes %> </td>
                    </tr>
                </div>             
                <a href="/quoter/new" class="btn btn-primary">
                    Add a product
                </a>
                <div class="print">
                    <button onclick="downloadPDF()">
                        PRINT
                    </button>
                    <script>
                        const element = document.getElementById("pdf-area");
                        function downloadPDF() {
                            window.html2pdf().from(element).toPdf().get('pdf').then(function (pdf) {
                                window.open(pdf.output('bloburl'), '_blank');
                            });
                        }
                        </script>
            </table>    
                </div>
            </div>           
        <%- include('../partials/footer.ejs') %> 
        </body>
</html>