<h1>Quoter</h1>
<p>Quote for:
    <input type="box" placeholder="name of the requester">
    <input type="submit"></p>
    
    
<div class="box">
<body>
    
    <div class="containerOne" id="pdf-area">
        <img src="https://i.imgur.com/QuS0A2q.jpg" alt=""  width="50" height="50">
        <p>Quote for: </p>
        <p>Quote from: Qu√≠mica Durango</p>
        <table>
            <th>ID</th>
            <th># of Product</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Total</th>
            
            <% products.forEach((product, i) => { %>
                <tr>
                    <td><%= product._id%></td>
                    <td> <%= i + 1 %> </td>
                    <td><a href="/quoter/<%= product._id %>">
                        <%= product.product %>
                    <td><%= product.qty %></td>
                    <td>$ <%= product.price %></td>
                    <td>$ <%= product.price * product.qty %></td>
                    <% }); %>  
                </table>
                <div class="totals">
                    <label><strong>Subotal: </strong> <%= total %> </label><br>
                    <label><strong> Taxes: </strong> <%= taxes %></label><br>
                    <label><strong> Total: </strong>  <%= total + taxes %> </label><br>
                </div>
            </div>
            <a href="/quoter/new" class="btn btn-primary">
                Add a product
            </a>
            <div class="print">
            <button onclick="downloadPDF()">
                PRINT
            </button>
        </div>
    </div>
