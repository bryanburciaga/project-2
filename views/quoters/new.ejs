<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of products</title>
</head>
<body>
    <h1>List of products</h1>
    
    <div class="container">
    <table>
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Select</th>
          </tr>
          <tr>
            <td></td>
            <form action="/quoter" method="POST">
            <tr>
                <% products.forEach((product, i) => { %>
                <td><%= i + 1  %></td>
                <td><%= product.product %></td>
                <td><input type="box" placeholder="qty"> </td>
                <td>$<%= product.price %></td>
               
        
            <td>
            <input type="checkbox" name="select">
            </td>
                 </div>
            </div>  
              </tr>
              <% }); %>
              <td>
         
            <input type="button" name="add" value="Add product">
          </form>
          <input type="button" name="add" value="Create product">
        </div>
    </td>
          <a href="/quoter">Back to your quote</a>
</body>
</html>
